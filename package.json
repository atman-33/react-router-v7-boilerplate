{
  "name": "react-router-v7-boilerplate",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "--- CHECK SECTION ---": "--- --- --- --- ---",
    "typecheck": "react-router typegen && tsc",
    "biome:check:write": "npx biome check --write",
    "--- DB SECTION ---": "--- --- --- --- ---",
    "db:migrate:dev": "npx env-cmd -f .env npx prisma migrate dev",
    "db:push:dev": "npx env-cmd -f .env npx prisma db push",
    "db:generate": "npx env-cmd -f .env npx prisma generate",
    "db:studio": "npx env-cmd -f .env npx prisma studio",
    "db:seed": "npx tsx prisma/seed.ts",
    "--- TEST SECTION ---": "--- --- --- --- ---",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "--- CI SECTION ---": "--- --- --- --- ---",
    "ci:check": "npx biome ci",
    "ci:build": "npx env-cmd -f .env.example npm run build",
    "ci:test": "npm run test"
  },
  "dependencies": {
    "@conform-to/react": "^1.2.2",
    "@conform-to/zod": "^1.2.2",
    "@prisma/client": "^6.3.1",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@react-router/fs-routes": "^7.1.5",
    "@react-router/node": "^7.1.5",
    "@react-router/serve": "^7.1.5",
    "@tailwindcss/vite": "^4.0.6",
    "bcryptjs": "^3.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "isbot": "^5.1.22",
    "lucide-react": "^0.475.0",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-call": "^1.7.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.5",
    "remix-auth": "^4.1.0",
    "remix-auth-form": "^3.0.0",
    "remix-auth-oauth2": "^3.2.2",
    "sonner": "^1.7.4",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@chromatic-com/storybook": "^3.2.4",
    "@faker-js/faker": "^9.5.0",
    "@react-router/dev": "^7.1.5",
    "@storybook/addon-essentials": "^8.5.6",
    "@storybook/addon-interactions": "^8.5.6",
    "@storybook/addon-onboarding": "^8.5.6",
    "@storybook/blocks": "^8.5.6",
    "@storybook/react": "^8.5.6",
    "@storybook/react-vite": "^8.5.6",
    "@storybook/test": "^8.5.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22",
    "@types/react": "^19.0.9",
    "@types/react-dom": "^19.0.3",
    "prisma": "^6.3.1",
    "storybook": "^8.5.6",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  }
}
